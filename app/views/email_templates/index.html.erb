<h1>Listing Email Templates</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @email_templates.each do |email_template| %>
  <tr>
    <td><%= email_template.subject %></td>
    <td><%= email_template.body %></td>
    <td><%= link_to 'Show', email_template %></td>
    <td><%= link_to 'Edit', edit_email_template_path(email_template) %></td>
    <td><%= link_to 'Destroy', email_template, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

