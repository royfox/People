<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @person.name %>
</p>
<p>
  <b>Email:</b>
  <%= @person.email %>
</p>
<p>
  <b>Phone:</b>
  <%= @person.phone %>
</p>

<h2>Comments</h2>
<% @person.comments.each do |comment| %>
	<div class="comment">
		<div class="commenter">
			<%= comment.user.name %> <small><%= comment.created_at %></small>
		</div>
		<div class="body">
			<%= comment.body %>
		</div>
	</div>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@person, @person.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
